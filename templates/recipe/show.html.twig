{% extends 'base.html.twig' %}

{% block title %}Hello RecipeController!
{% endblock %}

{% block javascripts %}

{% endblock %}

{% block body %}
        <section class="m-4">

            <div class="card mx-auto">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ asset('images/img_recipe.jpg') }}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex flex-column">
                            <div class="card-body d-flex flex-column">
                                <form class="align-self-end">
                                    <div class="form-group">
                                        <label for="exampleFormControlSelect1">Nombre de personnes</label>
                                        <input type="number" id="personnes" name="personnes" min="1" max="20" value="2">
                                    </div>
                                </form>
                                <h4 class="mymenu_card-title">{{ recipe.name }}</h4>
                                <p class="card-text">{{ recipe.description }}</p>
                            </div>

                            {% if ingredients %}
                            <h3 class="m-3">Ingredients</h3>
                            <ul class="list-group list-group-flush">
                                {% for ingredient in ingredients %}
                                    <li class="list-group-item">{{ ingredient.name }}</li>
                                {% endfor %}
                            </ul>
                            {% endif %}

                            {% if steps %}
                            <h3 class="m-3">Etapes</h3>
                            <ul class="list-group list-group-flush">
                                {% for step in steps %}
                                    <li class="list-group-item">{{ step.description }}</li>
                                {% endfor %}
                            </ul>
                            {% endif %}
                            <div class="align-self-end">
                                <button class="btn p-0"><i class="fa fa-edit"></i></button>
                                <button class="btn"><i class="fa fa-trash-alt"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}